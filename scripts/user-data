#cloud-config
# Set the default user
system_info:
  default_user:
    name: netty

# Unlock the default user
chpasswd:
  list: |
     netty:netty
  expire: False

# Other settings
resize_rootfs: True
ssh_pwauth: True
timezone: Europe/Berlin

packages:
 - git
 - autoconf
 - automake
 - libtool
 - cifs-utils
 - make
 - tar
 - gcc
 - expect

runcmd:
 - [ mount, -o, sec=none, -t, cifs, //10.0.2.4/qemu/, /mnt ]

# For expect to know when to log in and begin tests
final_message: "SYSTEM READY TO LOG IN"
